/********JUMBOTRON and SLIDER*********/

.jumbotron{
	margin-top: 30px;
	background: url(people.jpg) no-repeat fixed center top transparent;
  background-size: cover;
	color: white;
	height: 500px;
	margin-bottom: 0;
}
.slider{
  padding: 20px;
  margin-top: 50px; 
}
.slider-image{
  display: inline-block;
  float: right;
  margin-top: 35px;
  display: none;
}
.slider div img{
  height: 12em;
  width: 12em;


}
.slider div h1{
    font-size: 70px;
}

