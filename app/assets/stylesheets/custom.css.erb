/********PANELS*********/

.one{
  padding-top: 50px;
  padding-bottom: 30px;
  background-color: #E1E1E1;
  width: 100%;
}
.panel{
	text-align: center;
	box-shadow: 0px 2px 3px 0px rgba(50, 50, 50, 0.2);
	padding: 15px;
	padding-top: 45px;
  border-radius: 0;
}
.panel h2{
	font-size: 25px;
	font-weight: 800;
  color: #2C3E50;
}
.panel p{
	color: #777;
  font-size: 20px;
  margin-bottom: 0;
  padding-top: 10px;
}
.panel>p>a{

}
.panel>img{
  width: 110px;
  height: 100px;
  border: 4px solid #2980B9;
  border-radius: 4px;
  padding: 8px;
}
hr{
  margin-top: 0;
}


@media only screen and (max-width: 960px) { 
  .jumbotron { 
    height: 600px;
    text-align: center;
  }
  .slider div{
    overflow: hidden;
  }
  .slider div p:first-of-type span{
    background-color: transparent;
    padding: 10px;
    line-height: 20px;
    font-size: 1em;
  }
  .slider div h1{
    font-size: 30px;
  }
}
@media only screen and (max-width: 480px) { 
  .jumbotron{
    background-image: none;
    background-color: #2980B9;
  }
  body{
    font-family: Helvetica, sans-serif;
  }
}