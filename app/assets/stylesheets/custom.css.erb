/* Slick Arrows */

.slick-prev, .slick-next { position: absolute; display: block; height: 70px; width: 70px; line-height: 0; font-size: 0; cursor: pointer; background: transparent; color: transparent; top: 45%; margin-top: -10px; padding: 0; border: none; outline: none; opacity: 0.6; }

.slick-prev:hover, .slick-prev:focus { opacity: 1; background: url(/assets/left_arrow.png); }
.slick-next:hover, .slick-next:focus { opacity: 1; background: url(/assets/right_arrow.png);}

.slick-prev.slick-disabled:before, .slick-next.slick-disabled:before { opacity: 0.25; }
.slick-prev:hover, .slick-next:hover{
  opacity: 1;
}

.slick-prev:before, .slick-next:before { font-family: "none"; font-size: 40px; line-height: 1; color: transparent; opacity: 0.75; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; }

.slick-prev { 
  left: -75px; 
  background-image: url(/assets/left_arrow.png);
}
.slick-prev:before { content: "\2190"; }

.slick-next { 
  right: -75px; 
  background-image: url(/assets/right_arrow.png);
}

