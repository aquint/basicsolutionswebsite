 <% provide(:sheet, "contact") %>
 <!-- Main jumbotron -->
    <div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <h1>Contact Us</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="bar"></div>
    <div class="one" id="services">
     <div class="container">
      <!-- Row of columns -->
        <div class="row">
          <div class="col-md-12">
            <div class="panel">
              <h2>We want to hear from you! For general inquiries, or if you would like to get a project started, you can send us a message here. We can also be reached by phone at (416)-908-5929.</h2>
              <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
              <% end %>
              <%= form_for(@msg) do |f|%>
                  <div class="form-group">
                      <%= f.label :name, 'Name' %>
                      <%= f.text_field :name, class: 'form-control', placeholder: 'Your Name' %>
                  </div>
                  <div class="form-group">
                      <%= f.label :email, 'Email' %>
                      <%= f.email_field :email, class: 'form-control', placeholder: 'Your Email Address' %>
                  </div>
                  <div class="form-group">
                      <%= f.label :comments, 'Comments' %>
                      <%= f.text_area :comments, class: 'form-control', rows: 4, placeholder: 'Comments...' %>
                  </div>
                  <%= submit_tag nil, class: 'btn btn-primary' %>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
